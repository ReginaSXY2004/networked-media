<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shrine Fortune â€” Enter Birth Information</title>
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="stylesheet" href="/css/birth-input.css">
</head>
<body>
    <div class="container">
        <div class="auth-card birth-card">
            <h2>Enter your Date and Birth</h2>
            
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="error-message">
                    <%= error %>
                </div>
            <% } %>
            
            <form action="/save-birth-info" method="POST">
                <div class="form-group">
                    <input type="text" name="birthdate" placeholder="MM/DD/YYYY" required>
                </div>
                
                <div class="form-group">
                    <input type="text" name="birthtime" placeholder="Birth Time (optional, e.g. 14:30)">
                </div>
                
                <div class="form-group">
                    <input type="text" name="birthplace" placeholder="Birth Location (optional)">
                </div>
                
                <div class="form-group">
                    <button type="submit" class="btn-submit">Next</button>
                </div>
            </form>
        </div>
    </div>
</body>
</html>