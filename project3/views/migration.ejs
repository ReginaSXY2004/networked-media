<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Migration Map</title>
    <link rel="stylesheet" href="/styles/migration.css">
    <script src="/scripts/map.js"></script>
    <script 
        src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAp-H2gschTSffUvq9nqYbs72aTP3Q-LDk&callback=initMap" 
        async 
        defer>
    </script>
</head>
<body>
    <nav>
        <a href="/home">Home</a>
        <a href="/migration">Migration Map</a>
        <a href="/community">Community</a>
    </nav>

    <section class="migration-section">
        <div class="migration-block">
            <div class="image">
                <img src="/images/downstream.jpg" alt="Downstream" style="width: 100%; height: 100%;">
            </div>
            <div class="text"><%= downstreamContent %></div>
        </div>
        <div class="migration-block">
            <div class="image">
                <img src="/images/midstream.jpg" alt="Midstream" style="width: 100%; height: 100%;">
            </div>
            <div class="text"><%= midstreamContent %></div>
        </div>
        <div class="migration-block">
            <div class="image">
                <img src="/images/upstream.jpg" alt="Upstream" style="width: 100%; height: 100%;">
            </div>
            <div class="text"><%= upstreamContent %></div>
        </div>

    </section>
    

    <section class="map-section">
        <h2>Map</h2>
        <div class="map-legend">
            <div class="legend-item">
                <div class="legend-color" style="background-color: red;"></div>
                <span>River Section (Upstream, Midstream, Downstream)</span>
            </div>
            <div class="legend-item">
                <div class="legend-color" style="background-color: yellow;"></div>
                <span>Pollution Report</span>
            </div>
        </div>
        <div id="map"></div>
    </section>
    <section id="form-popup" style="display: none;">
        <h2>Report Pollution</h2>
        <form id="pollution-form" enctype="multipart/form-data">
            <label for="lat">Latitude:</label>
            <input type="text" id="lat" name="lat" readonly required>
    
            <label for="lng">Longitude:</label>
            <input type="text" id="lng" name="lng" readonly required>
    
            <label for="pollutionType">Pollution Type:</label>
            <select id="pollutionType" name="pollutionType">
                <option value="Algal Bloom">Algal Bloom</option>
                <option value="Oil Spill">Oil Spill</option>
                <option value="Plastic Waste">Plastic Waste</option>
                <option value="Dead Fish">Dead Fish</option>
            </select>
    
            <label for="image">Upload Image:</label>
            <input type="file" id="image" name="image" accept="image/*">
    
            <button type="submit">Submit Report</button>
        </form>
    </section>
    
</body>
</html>
