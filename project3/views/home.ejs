<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Salmon Migration</title>
        <link rel="stylesheet" href="/styles/home.css">
    </head>
<body>
    <nav>
        <a href="/home">Home</a>
        <a href="/migration">Migration Map</a>
        <a href="/community">Community</a>
    </nav>

    <section id="video">
        <h1>Salmon's life Video</h1>
        <iframe width="100%" height="500px" src="https://www.youtube.com/embed/<%= videoId %>" frameborder="0" allowfullscreen></iframe>

    </section>

    <section id="background-story">
        <h2>Background story</h2>
        <p>
            <%= backgroundStory %>
        </p>
    </section>


    <h3>All Reports</h3>
    <% userReports.forEach(report => { %>
        <div class="user-report">
            <img src="/uploads/<%= report.image %>" alt="User Report Image" style="max-width: 500px;">
            <p><%= report.text %></p>
        </div>
    <% }); %>
    <h3>Submit Your Report</h3>
    <form action="/submit-salmon-report" method="POST">
        <textarea name="reportText" placeholder="Write your report here..." rows="5" cols="50"></textarea>
        <br>
        <label for="reportImage">Upload Image</label>
        <input type="file" name="reportImage">
        <br>
        <button type="submit">Submit Report</button>
    </form>
</body>
</html>
